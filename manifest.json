{
  "name": "ppm",
  "version": "1.0",
  "description": "ppm helper",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "64": "images/icon64.png",
      "128": "images/icon128.png"
    }
  },
  "content_scripts":[
    {
      "matches": ["https://github.com/*"],
      "js": ["login.js"]
    }
  ],
  "permissions": [
    "storage",
    "activeTab",
    "declarativeContent",
    "webRequest",
    "webRequestBlocking",
    "https://developer.mozilla.org/*"
  ]
}